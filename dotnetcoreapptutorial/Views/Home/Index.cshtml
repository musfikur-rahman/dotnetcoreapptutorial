@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="w3-responsive">
    <table class="w3-table w3-bordered w3-table-all w3-hoverable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Department</td>
                </tr>
            }
        </tbody>
    </table>
</div>